	<defaultLabelColor>(50,205,50)</defaultLabelColor>
    <label>Thrill of The Hunt</label>
    <description>The bleeding rate of the hunter is reduced.</description>
	<maxSeverity>1.0</maxSeverity>
	<isBad>false</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
